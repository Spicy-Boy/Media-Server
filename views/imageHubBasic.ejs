<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Image Hub</title>

    <link rel="stylesheet" href="/css/style.css">

    <%
    let isThisActiveUserPage = false;
    if (activeUser.username == targetUser.username)
    {
        isThisActiveUserPage = true;
    }
    %>

    <style>
        body {
            background-color: black;
        }

        .gallery-segment-day {
            padding: 10px;
            width: 95%;
        }

        .gallery-segment-date-label {
            margin-top: 5px;
            color: white;
        }

        .gallery-picture-container {
            width: 95%;
        }

        .gallery-image {
            width: 100px;
            height: 100px;
            background-color: red;

            background-size: cover;
            background-position: center;
            background-repeat: no-repeat;
            cursor: pointer;
            margin: 5px;

            padding: 4px;
        }

        .gallery-creation-form {
            background-color: rgb(255, 210, 199);
            padding: 10px;

            color: black;

            border: 4px groove;
        }

        .gallery-date-header {
            margin-bottom: 1px;
        }

        .gallery-date-subheader {
            margin-bottom: 10px;
            margin-top: 0px
        }

        #image-display {
            position: fixed;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);

            width: 100%;
            height: 100%;

            background-color: rgba(0, 0, 0, 0.685);

            display: flex;
            align-items: center;
            justify-content: center; 
        }
        #image-to-be-displayed {
            max-width: 99%;
            max-height: 99%;

            text-align: center;
        }

        #image-display-left-arrow {
            position: fixed;
            top: 95%;
            left: 15px;

            size: 15px;
            opacity: 50%;
            cursor: pointer;
        }
        #image-display-right-arrow {
            position: fixed;
            top: 95%;
            right: 15px;

            size: 15px;
            opacity: 50%;
            cursor: pointer;
        }

        .hidden {
            display: none !important;
        }

        .close {
            position: absolute;
            top: 5px; right: 20px;
            font-size: 40px;
            color: white;
            cursor: pointer;
        }
    </style>

    <script>
        let pageUsername = "<%=targetUser.username%>";
    </script>

</head>

<body>
    <div class="flex-row flex-centered">
        <%if (isThisActiveUserPage) {%>
        <form class="suicune-form flex-column flex-centered" style="width: 99%;" enctype="multipart/form-data" method="post">
            <img src="/images/smeargle.png">
            <div id="upload-files" style="margin-bottom: 15px;">
                <label for="images-input">Choose images to upload: </label>
                <input id="images-input" name="uploaded_file" type="file" multiple>
            </div>

            <input type="submit" value="BEGIN UPLOAD" id="upload-button">

        </form>

        <form id="gallery-creation-panel" class="flex-column flex-centered gallery-creation-form" style="width: 99%; padding-top: 15px;" action="/api/image/createGalleryFromMongoIds">
            <div class="flex-row">
                <label for="gallery-title">Title for Gallery:&nbsp;&nbsp;</label>
                <input type="text" id="gallery-title" value="" name="galleryTitle" placeholder="Choose a title" required>
            </div>
            <p>NOTE: The gallery will be created with all your uploaded images... I haven't bothered to create a selection system yet!</p>
            <input type="submit" value="CREATE GALLERY" id="create-gallery-button">
        </form>
        <%}%>

        <div id="upload-console" style="max-height: 200px; overflow-y: auto" class="flex-column">

        </div>
    </div>

    <!-- <div id="gallery-list">
        
    </div> -->

    <button id="generate-gallery-DOM-button">CREATE GALLERY</button>

    <div id="gallery" class="flex-column flex-centered">
        <!-- GALLERY HOLDER -->
         
        <!-- <div class="gallery-segment-day flex-column"> -->

            <!-- <div class="gallery-segment-date-label">
                <h1>July 10th, 2025</h1>
            </div>

            <div class="gallery-picture-container flex-row flex-wrap">

                <div class="gallery-image" style="background-image: url('/images/800px-Luddite.jpg')" onClick="openFullImage('/images/800px-Luddite.jpg')"></div>

            </div>

        </div> -->
        <!-- GALLERY HOLDER -->
    </div>

    <!-- vvv the lightbox from which images are displayed! -->
    <div id="image-display" class="hidden" onclick="closeDisplayOnClickingBackdrop(event)"> 
        <span onclick="closeDisplay()" class="close">&times;</span>
        <img id="image-to-be-displayed" src="" alt="A beautiful picture projected from magic box.">
        <div id="image-display-left-arrow">⬅️</div>
        <div id="image-display-right-arrow">➡️</div>
    </div>

    <template id="gallery-day-template">
        <div class="gallery-segment-day flex-column">

            <div class="gallery-segment-date-label">
                <h1 class="gallery-date-header">DATE</h1>
                <h2 class="gallery-date-subheader"></h2>
            </div>

            <div class="gallery-picture-container flex-row flex-wrap">

                <!-- contains the "gallery-image" containers -->

            </div>

        </div>
    </template>

    <template id="gallery-image-template">
        <div class="gallery-image" style="background-image: url('imgsrc')"></div>
    </template>
</body>

<script src="./js/TESTgalleryFunctionality.js"></script>

</html>